
/* 按钮组 */
.btn_block {
  width: 100%;
  height: 50px;
  display: flex;
}
.btn_block text{
  width: 33%;
  margin-top: 15px;
  text-align: center;
  font-size: 18px;
}

/* 瀑布流 */
.pbl1_one {
  width: 48%;
  height: 460rpx;
  margin: 1px 1%;
  float: left;
}
.pbl1_img {
  width: 100%;
  height: 360rpx;
}
.pbl1_title_view {
  width: 100%;
  height: 46rpx;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.pbl1_money {
  width: 100%;
  height: 48rpx;
}
.pbl1_money_now {
  float: left;
  font-size: 12px;
  color: red;
}
.pbl1_money_old {
  float: right;
  font-size: 12px; 
  text-decoration:line-through;
}