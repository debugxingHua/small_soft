Page {
  background-color: #E8E8E8;
}

.container {
  background-color: #fff;
}
/* 标题 */
.title{
  font-size: 18px;
  width: 97%;
  height: 30px;
  padding-left: 2px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 销量及❤ */
.sales{
  color: #333;
  padding-bottom: 6px;  
  border-bottom: 1px solid #999;
}
/* ❤ */
.like {
  float: right;
  padding-right: 10px;
}
/* 价格 */
.money{
  color:red;
}
/* 删除的价格 */
.money_old{
  color: #666;
  margin-left: 10px;
  text-decoration: line-through;
}
/* 快递 */
.expressage{
  color: #666;
  float: right;
  padding-right: 5px; 
}

/* 内填充划线 */
.money, .specification, .guarantee, .shipments {
  padding-top: 6px;
  padding-bottom: 6px;
  border-bottom: 1px solid #999;
}

.buttons {
  background-color: #fff;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  font-size: 30px;
  width: 100%;
}
.btn1,.btn2 {
  text-align: center;
  width: 100%;
}

.img {
  width: 100%;
}

.tj {
  width: 100%;
  text-align: center;
  margin-bottom: 60px;
}

.footer {
  background-color: #fff;
  border-top: 1px solid #ccc;
  width: 100%;
  position:fixed;
  bottom: 0;
  text-align: center;
}


.tabar_bottom {
  width: 100%;
  text-align: center;
}
.tabar_bottom view {
  float: left;
  padding-top: 10px;
  padding-bottom: 10px;
}
.sy {
  background-color:#E8E8E8;
  width: 20%;
}

.cart {
  background-color:#ccc;
  width: 20%;
}

.addCart{
  background-color:#9966ff;
  width: 30%;
}
.buy{
  background-color:red;
  width: 30%;
}


/* parameter */
.param_contanier {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
}
.param_top {
  width: 100%;
  height: 40%;
  background-color: #666666;
  opacity:0.4;
}
.param_bottom {
  width: 100%;
  height: 60%;
  background-color: #fff;
  font-size: 8px;
  font-family: sans-serif;
}

 .param_count,.param_color,.param_size,.param_img {
  background-color: #fff;
  width: 100%;
  height: 12%;
  padding-top: 10px;
  padding-bottom: 10px;
} 
/* 最下面的按钮组 */
.param_btn {
  width: 100%;
  position:fixed;
  bottom: 0;
  text-align: center;
}
.param_cart,.param_buy {
  width: 50%;
  float: left;
  padding-top: 10px;
  padding-bottom: 10px;
}
/* 图片 */
.param_img {
  border-bottom: 1px solid #ccc;
}
.param_img_bq {
  position: relative;
  top: -40px;
  left: 30px;
  width: 90px;
  height: 90px;
}
.param_img_text1 {
  position: relative;
  top: -92px; 
  left: 175px;
}
.param_img_text2 {
   position: relative;
  top: -87px; 
  left: 172px;
}

/* 尺寸 */
.param_size {
  border-bottom: 1px solid #ccc;
  padding-top: 10px;
  padding-bottom: 10px;
}

/* 颜色 */
.param_color {
  border-bottom: 1px solid #ccc;
  padding-top: 10px;
  padding-bottom: 10px;
}

.param-title {
  margin-left: 10px;
}
/* 单选框 */
.param_radio {
  margin-top: 5px;
  flex-direction: row;
}
.radio-group {
  margin-left: 3px;
}
.param_radio text{
  margin-left: 10px;
  padding:2px 10px;
  background-color: #E8E8E8;
  color: #999;
}
.radio_checked {
  color: red;
  border-bottom: 2px solid red; 
}


/* 数量组 */
.param_count {
  width: 100%;
  border-bottom: 1px solid #ccc;
  padding-top: 10px;
  padding-bottom: 10px;
  position:absolute;
  bottom: 80;
}
.param_count_operation {
  width: 30%;
  float: right;
  padding-right: 15px;
}
.param_count_jian {
  width: 30%;
  float: left;
}
.param_count_jia {
  width: 30%;
  float: left; 
}
.param_count_input {
  width: 40%;
  float: left;
  text-align: center;
}
 .param_count_operation text{
  width: 10px;
  padding:2px 10px;
  background-color: #E8E8E8;
}