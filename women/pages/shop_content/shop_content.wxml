<!-- 商品滑动图 -->
<swiper indicator-dots='true' autoplay='true' interval='5000'>
  <swiper-item wx:for="{{swiper_img}}" wx:for-item="item" wx:key="">
    <image src='{{item.img_src}}'></image>
  </swiper-item>
</swiper>
<view class='container'>
  <view class='title'>
    <!-- 标题 -->
    <text>{{title}}</text>
  </view>
  <view class='sales'>
    <!-- 销量 -->
    <text>销量: {{sales}}</text>
    <text class='like'>☆</text>
  </view>
  <view class='money'>
    <!-- 价格 -->
    <text class='money_now'>{{money_now}}</text>
    <text class='money_old'>{{money_old}}</text>
    <!-- 快递 -->
    <text class='expressage'>免运费</text>
  </view>
  <view class='specification'>
    <!-- 规格尺码 -->
    <text>规格：</text>
    <text style='color:#666;'>颜色、尺码</text>
    <text style='float:right;margin-right:2px;'>></text>
  </view>
  <view class='guarantee'>
    <!-- 保障 -->
    <text>正品保障 发货&售后 七天退货</text>
  </view>
  <view class='shipments'>
    <!-- 发货提供 -->
    <text>该商品由xxx供货并提供发货</text>
  </view>
</view>

<!-- 商品详情及推荐按钮组，锚点实现 -->
<view class='buttons'>
  <text class='btn1' style='color:red;'>商品详情</text>
  <!-- <text class='btn2' bindtap='#tj'>为你推荐</text> -->
</view>
<!-- 商品详情图片组 -->
<view wx:for="{{swiper_img}}" wx:key="" wx:for-item="item" wx:for-index="idx">
  <image class='img' src="{{item.img_src}}"></image>
</view>
<!-- 为你推荐。。 -->
<view id='tj'></view>
