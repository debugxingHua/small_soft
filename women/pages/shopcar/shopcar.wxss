
.container {
  background-color: #fff;
  padding: 0 10rpx;
}

.shop_name {
  margin-left: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

/* 商品信息 */
.shop_content {
  width: 100%;
  height: 80px;
  padding-top:10px; 
  /* border: 1px solid #f33; */
  margin-bottom: 10px;
}
/* 图片 */
.img_container {
  width: 25%;
  text-align: center;
  float: left;
  position: relative;
}
.checkbox {
  position:absolute;
  top:0px;
  left:10rpx;
}
.img {
  width: 90%;
  height: 80px;
  /* border: 1px solid #f33; */
}
.content_container {
  width: 75%;
  height: 80px;
  float: left;
}
/* 标题和删除按钮 */
.td {
  /* border: 1px solid #f33; */
  padding: 10rpx auto;
}
.title {
  padding-left: 10rpx;
}
.delete {
  padding-right: 10rpx;
  float: right;
}
/* 尺寸、颜色 */
.sc {
  color: #666;
  font-size: 12px;
  padding-left: 10rpx;
}
/* 价格、数量 */
.mc {
  width: 100%;
  padding-top: 10px;
  padding-left: 10rpx;
}
.money {
  width: 30%;
  color: #f33;
  float: left;
}
.count {
  width: 70%;
  float: right;
  text-align: center;
}
.jian, .jia {
  width:30%;
  float:left;
}
.count_value {
  width: 30%;
  float: left;
}
.count_value input{
  line-height: 2.3em;
  color: #fff;
}

.delete {
  color: #ccc;
}


/* 底部全选组 */
.footer {
  background-color: #fff;
  border-top: 1px solid #ccc;
  width: 100%;
  position:fixed;
  bottom: 0;
  text-align: center;
  z-index:auto;
}
.qx,.hj{
  font-size: 16px;
  float: left;
  padding-top: 10px; 
  padding-bottom: 10px; 
}
.qx {
  width: 30%;
}
.hj {
  width: 40%;
}
.js {
  float: left;
  width: 30%;
   padding-top: 7px; 
}
.js_btn {
  width: 70%;
  background-color: #f33;
  line-height :30px;
}